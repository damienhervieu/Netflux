<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Management | Netflux</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
   <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    
</head>
<body>
        <nav class="navbar navbar-default navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar top-bar"></span>
                            <span class="icon-bar middle-bar"></span>
                            <span class="icon-bar bottom-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Netflux</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="/user-management">Manage Users</a></li>
                        </ul>
                        <ul class="nav navbar-nav pull-right">
                                <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
        </nav>
        <table class="table table-bordered table-responsive">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>permission</th>
                    <th>Modify</th>
                    <th>Delete</th>
                </tr>
                <% for (i=0; i < results.length; i++) { %>
                    <tr>
                        <td><%= results[i].id_user %></td>
                        <td><%= results[i].first_name + " " + results[i].last_name %></td>
                        <td><%= results[i].email %></td>
                        <td><%= results[i].permission %></td>
                        <td><a href="/user-management/modify/<%= results[i].id_user %>">Modify</a></td>
                        <td><a href="/user-management/delete/<%= results[i].id_user %>">Delete</a></td>
                    </tr>
                <% } %>
            </table>
</body>